#include <stdio.h>

void main() {
    int n1,n2,o ;
    printf("enter the numbers");
    scanf("%d%d%",&n1,&n2);
    printf("choose the opertaion you wanna perform -\n1)add\n2)subtract\n3)multiply\n4)divide\n-- ");
    scanf("%d",&o);
    switch(o){
        case 1:
        printf("%d",n1+n2) ;
        break ;
         case 2:
        printf("%d",n1-n2) ;
        break ;
         case 3:
        printf("%d",n1*n2) ;
        break ;
         case 4:
        printf("%d",n1/n2) ;
        break ;
        
    }
}
