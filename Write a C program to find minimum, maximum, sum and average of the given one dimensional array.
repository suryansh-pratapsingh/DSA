#include <stdio.h>
int main() {
    int n,i,s,g;
    printf("enter size of array");
    scanf ("%d",&n);
    int a[n];
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    i=0;
    for(i=0;i<n;i++){
        printf("%d\n",a[i]);
    }
    i=0;
    s=0;
    for(i=0;i<n;i++){
        s=s+a[i];
    }
    printf("%d\n",s);
    g=s/n;
    printf("%d\n",g);
    
    int min=a[0];
    for(i=0;i<n;i++){
        if(a[i]<min){
            min=a[i];
        }
     
    }
    printf("Smallest element present in given array: %d\n", min);      

    return 0;
}
